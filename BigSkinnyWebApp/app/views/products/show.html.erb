

<h3 id="notice" class="text-center"><%= notice %></h3>
<div class=row>
  <div class="col-md-2">&nbsp</div>
  <div class=col-md-5>
    <h1><%= @product.name %></h1>
    <h2>Price: <%= number_to_currency(@product.price) %></h2>
  <div id="showdesc">
    <strong>Description:</strong>
    <%= @product.description %>
  </div>
  <p>
    <strong>Weight:</strong>
    <%= @product.weight %> grams
  </p>
  <p>
    <strong>Dimensions:</strong>
    <%= @product.dimensions %>
  </p>
  <p>
    <strong>Color:</strong>
    <%= @product.color %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= @product.category %>
  </p>
  <p>
    <strong>Stock:</strong>
    <%= @product.inventory %> units
  </p>


  <%= form_for(@product) do |f| %>
    <div class="field">

      <h3><%= f.label "Add to Cart?" %>
      <%= f.check_box :cart %></h3>
    </div>
  <br>
    <div class="actions">
      <%= f.submit "Submit"%>
    </div>
  <% end %>
  <br>
  <div class=" text-center">
    <button class="btn btn-sm"><%= link_to 'Back to Products', products_path %></button>
    <br/>
    <br/>
  </div>

  </div>

  <div class=col-md-3 id="showpic">
  <br><br><br><br>
  <% if @product.picture_url.nil? || @product.picture_url.include?("missing") %>
    <%= image_tag "missing.png" %>
  <% else %>
    <%= image_tag @product.picture_url, class:"img-thumbnail"%>
  <% end %>
  </div>
  <div class="col-md-2">&nbsp</div>
</div>
