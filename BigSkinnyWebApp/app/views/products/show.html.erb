<p id="notice"><%= notice %></p>
<br/>
<div class=row>
  <div class="col-md-2">&nbsp</div>
  <div class=col-md-5>
    <h1><%= @product.name %></h1>
    <h2>Price: <%= @product.price %></h2>
  <div id="showdesc">
    <strong>Description:</strong>
    <%= @product.description %>
  </div>
  <p>
    <strong>Weight:</strong>
    <%= @product.weight %>
  </p>
  <p>
    <strong>Dimensions:</strong>
    <%= @product.dimensions %>
  </p>
  <p>
    <strong>Color:</strong>
    <%= @product.color %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= @product.category %>
  </p>
  <p>
    <strong>Inventory:</strong>
    <%= @product.inventory %>
  </p>
  <p>
    <strong>Cart:</strong>
    <%= @product.cart %>
  </p>

  <%= form_for(@product) do |f| %>
    <div class="field">
      <%= f.label "Add to Cart?" %>
      <%= f.check_box :cart %>
    </div>
  <br>
    <div class="actions">
      <%= f.submit "Submit"%>
    </div>
  <% end %>
  <br>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
  </div>

  <div class=col-md-3 id="showpic">
  <br><br><br><br>
  <% if @product.picture_url.nil? || @product.picture_url.include?("missing") %>
    <%= image_tag "missing.png" %>
  <% else %>
    <%= image_tag @product.picture_url, class:"img-thumbnail"%>
  <% end %>
  </div>
  <div class="col-md-2">&nbsp</div>
</div>

