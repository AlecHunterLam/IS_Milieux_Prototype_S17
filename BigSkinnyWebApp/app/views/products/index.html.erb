        <iframe src="https://www.youtube.com/embed/lLlH78Ofkrk" frameborder="0" allowfullscreen></iframe>
      </div>

      <div class="row">
        <%= image_tag "ad_1.jpg" %>
      </div>
      <br/>
      <div class="row">
        <%= image_tag "ad_6.jpg" %>
      </div>
      <br/>
      <div class="row">
        <%= image_tag "ad_8.jpg" %>
      </div>
      <br/>
