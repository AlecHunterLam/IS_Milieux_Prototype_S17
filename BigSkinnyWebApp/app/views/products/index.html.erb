        <%= image_tag "ad_11.jpg" %>
      </div>

    </div>
  </div>

  <div class="col-md-10">
    <table class="table table-hover">

      <thead>
        <tr>
          <th><p>Name</p></th>
          <!-- <th>Description</th> -->
          <th><p class="text-center">Picture</p></th>
          <th><p class="text-center">Weight</p></th>
          <th><p class="text-center">Category</p></th>
          <th><p class="text-center">Price</p></th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <!-- <td><%= product.description %></td> -->
            <% if product.picture_url.nil? || product.picture_url.include?("missing") %>
              <td><%= image_tag "missing.png" %></td>
            <% else %>
              <td><%= image_tag product.picture_url %></td>
            <% end %>
            <td><p class="text-center"><%= product.weight %> grams</p></td>
            <td><p class="text-center"><%= product.category %></p></td>
            <td><p class="text-center"><%= number_to_currency(product.price) %></p></td>

            <td ><p class="text-center"><%= link_to 'View Product Details', product %></p></td>
            <td><p class="text-center"><%= link_to 'Edit Product', edit_product_path(product) %></p></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  

  <div class=" text-center">
    <button class="btn btn-lg"><%= link_to 'Add New Product', new_product_path %></button>
    <br/>
