<%= form_for(product, :html => { :class => "text-center" }) do |f|%>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <div class="field form-group">
    <%= f.label :dimensions %>
    <%= f.text_field :dimensions %>
  </div>

  <div class="field form-group">
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>

  <div class="field form-group">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>

  <div class="field form-group">
    <%= f.label :inventory %>
    <%= f.text_field :inventory %>
  </div>

  <div class="field form-group">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field form-group white">
    <%= f.label :picture%>
    <%= f.file_field :picture, class: "btn btn-default active" %>
  </div>


  <div class="actions">
    <%= f.submit class: "btn btn-default active"%>
  </div>
<% end %>
