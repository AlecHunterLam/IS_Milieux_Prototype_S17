




<p id="notice"><%= notice %></p>

<h1>Cart</h1>


  Products

<% if !(@ordered_items.empty?) %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <!-- <th>Description</th> -->
        <th>Weight</th>
        <th>Dimensions</th>
        <th>Color</th>
        <th>Category</th>
        <th>Inventory</th>
        <th>Price</th>
        <th>Cart</th>
        <th>Picture</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ordered_items.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <!-- <td><%= product.description %></td> -->
          <td><%= product.weight %></td>
          <td><%= product.dimensions %></td>
          <td><%= product.color %></td>
          <td><%= product.category %></td>
          <td><%= product.inventory %></td>
          <td><%= product.price %></td>
          <td><%= product.cart %></td>
          <% if product.picture_url.nil? || product.picture_url.include?("missing") %>
            <td><%= image_tag "missing.png" %></td>
          <% else %>
            <td><%= image_tag product.picture_url %></td>
          <% end %>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%else%>
  <h3 class="text-center">No items in cart!</h3>
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
<%end%>
