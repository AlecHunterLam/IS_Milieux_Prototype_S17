<!DOCTYPE html>
<html>
  <head>
    <title>BigSkinnyWebApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="http://twitter.github.com/bootstrap/assets/js/bootstrap.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">

    <script type="text/javascript">
    $(function () {
        $('#category').highcharts({
            chart: {
                type: 'column'
            },
            xAxis: {
                categories: ['Men\'s', 'Women\s', 'Cases']
            },
            title: {
                text: 'Wallet By Category'
            },
            series: [{
                showInLegend: false,
                data: [<%=Product.mens.all.size%>, <%=Product.womens.all.size%>,<%=Product.cases.all.size%>]
            }]
        });
    });
  </script>
  </head>


  <body>
    <%= render :partial => "partials/nav" %>
    <%= yield %>

    <footer>
      <div class="small-12 columns" id="footer">
        <%= render partial: 'partials/footer' %>
      </div>
    </footer>

  </body>
</html>
